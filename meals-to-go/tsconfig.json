{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@/infrastructure": ["app/infrastructure/index"],
      "@/components": ["app/components/*"],
      "@/utils": ["app/utils/*"],
      "@/features": ["app/features/*"],
      "@/assets": ["assets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
